[Unit]
Description=AI Conditioner Discord Bot
After=network.target

[Service]
Type=simple
User=your-username
WorkingDirectory=/path/to/ai-conditioner-discord
Environment="BOT_ENV=production"
ExecStart=/usr/bin/python3 /path/to/ai-conditioner-discord/bot.py
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target