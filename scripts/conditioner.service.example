[Unit]
Description=AI Conditioner Discord Bot
Wants=network-online.target
After=network.target

[Service]
Type=simple
User=YOUR_USERNAME
Group=YOUR_USERNAME
WorkingDirectory=/path/to/conditioner
ExecStart=/usr/bin/python3 /path/to/conditioner/bot.py
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
